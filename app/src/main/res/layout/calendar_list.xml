<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">
<!--아이템 리스트 낱개로 만드는 xml입니다. 이곳에 대타버튼을 넣으시면 됩니다!-->

        <LinearLayout
            android:id="@+id/cal_layout"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/calendar_starttime"
                android:layout_width="95dp"
                android:layout_height="25dp"
                android:layout_gravity="top"
                android:textSize="12sp"
                tools:text="출근시간" />
            <TextView
                android:id="@+id/calendar_endtime"
                android:layout_width="95dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/calendar_starttime"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                tools:text="퇴근시간" />
        </LinearLayout>

    <TextView
        android:id="@+id/calendar_reference"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:text="참조"
        android:layout_marginTop="10dp"
        android:textSize="12sp" />



        <TextView
            android:id="@+id/calendar_name"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.22"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:text="근무자"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="modify" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete" />
            <Button
                android:id="@+id/btn_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="request" />
        </LinearLayout>

</LinearLayout>